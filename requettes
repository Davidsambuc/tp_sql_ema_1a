

SELECT i.idCatégorie, i.nom, i.qualificatif, r.quantité
  FROM ingrédient i
  JOIN recette r ON i.idIngrédient = r.idIngrédient
  JOIN plat p ON p.idPlat = r.idPlat
 WHERE r.prenomChef = X
   AND r.nomChef = Y
   AND p.description = D


SELECT i.nom, 15*r.quantité
  FROM recette r 
  JOIN ingrédient i ON i.idIngrédient = r.idIngrédient
  JOIN plats p ON p.idPlat = r.idPlat
 WHERE r.prenomChef = Livius
   AND r.nomChef = Raymond
   AND p.designation = "calamars à l'américaine"


SELECT i.nom, 15*r.quantité
  FROM recette r 
  JOIN ingrédient i ON i.idIngrédient = r.idIngrédient
  JOIN plats p ON p.idPlat = r.idPlat
 WHERE r.prenomChef = Livius
   AND r.nomChef = Raymond
   AND p.designation = "calamars à l'américaine"


